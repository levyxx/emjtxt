{
  "name": "emoji-banner-generator",
  "version": "1.0.0",
  "description": "Convert text to emoji banner art for CLI display",
  "main": "dist/index.js",
  "bin": {
    "emoji-banner": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "emoji",
    "banner",
    "ascii-art",
    "cli",
    "text-to-emoji",
    "slack"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "commander": "^12.1.0",
    "figlet": "^1.7.0",
    "node-emoji": "^2.1.3"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
